!!! 5
%html
  %head
    %meta{:charset => "utf-8"}
    - if @item[:title]
      %title= "#{@item[:title]} - Zameer Manji"
    - else
      %title= "Zameer Manji"
    %link{:href => "/assets/stylesheets/reset.css", :rel => "stylesheet"}
    %link{:href => "/assets/stylesheets/base.css", :rel => "stylesheet"}
    %link{:href => '/assets/stylesheets/pygments.css', :rel => 'stylesheet'}

    %link{:href => "http://fonts.googleapis.com/css?family=Droid+Sans|Inconsolata", :rel => 'stylesheet'}

    %link{:rel => 'icon', :href => '/favicon.ico', :sizes => "16x16", :type => "image/vnd.microsoft.icon"}

    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-20388638-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

    %script{:src => "http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js"}
    %script{:src => "http://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.2.2/underscore-min.js"}
    %script{:src => "/assets/javascripts/vendor/jquery.timeago.js"}
    %script{:src => "https://raw.github.com/twitter/twitter-text-js/master/pkg/twitter-text-1.4.9.js"}
    %script{:src => "/assets/javascripts/last_tweet.js"}





  %body
    .wrap
      #top
        %header
          = link_to 'Zameer Manji', '/'
        %nav
          %ul
            %li
              = link_to('Blog', '/blog/')
            %li
              = link_to('About', '/about/')
            %li
              = link_to('Résumé', '/resume.pdf')

      #content
        %article{:id => @item[:wrapper_id]}
          - if @item[:kind] == 'article'
            - if @item[:title]
              %h1= @item[:title]
            - if @item[:created_at]
              .posted= "Posted On: #{@item[:created_at].strftime("%B %d %Y")}"
          = yield

      %footer
        = content_for(@item, :footer)
        %p.small
          © 2012 Zameer Manji
